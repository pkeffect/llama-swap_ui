# Llama-Swap Manager Backend Configuration

# === PORTS ===
MANAGER_PORT=8000
LLAMA_SWAP_PORT=8090

# === API URLS ===
LLAMA_SWAP_URL=http://host.docker.internal:8090

# === PATHS ===
# Models directory path (can be relative or absolute)
MODELS_PATH=./models

# Config file path
CONFIG_PATH=./config.yaml

# Data directory for backups, logs, etc.
DATA_DIR=./data

# === FILE LIMITS ===
# Maximum file size for uploads (in bytes) - 50GB default
MAX_FILE_SIZE=50000000000

# === GPU SETTINGS (for llama-swap service) ===
# Which GPUs to use (all, 0, 1, 0,1, etc.)
NVIDIA_VISIBLE_DEVICES=all

# NVIDIA driver capabilities
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Number of GPUs to allocate
GPU_COUNT=1

# === LOGGING ===
# Maximum log file size for Docker containers
LOG_MAX_SIZE=10m

# Maximum number of log files to keep
LOG_MAX_FILES=3

# === DEVELOPMENT ===
# Set to true for development mode
DEV_MODE=false
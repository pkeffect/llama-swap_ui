# Llama-Swap Configuration Environment Variables

# === PORTS ===
LLAMA_SWAP_PORT=8090
UI_PORT=3001

# === PATHS ===
# Models directory path (can be relative or absolute)
MODELS_PATH=./models

# Config file path
CONFIG_PATH=./config.yaml

# === GPU SETTINGS ===
# Which GPUs to use (all, 0, 1, 0,1, etc.)
NVIDIA_VISIBLE_DEVICES=all

# NVIDIA driver capabilities
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Number of GPUs to allocate
GPU_COUNT=1

# === LOGGING ===
# Maximum log file size
LOG_MAX_SIZE=10m

# Maximum number of log files to keep
LOG_MAX_FILES=3

# === PERFORMANCE ===
# Docker compose project name
COMPOSE_PROJECT_NAME=llama-swap

# === DEVELOPMENT ===
# Set to true for development mode
DEV_MODE=false

# API timeout in seconds
API_TIMEOUT=30

# === BACKUP ===
# Enable automatic config backups
ENABLE_BACKUPS=true

# Backup directory
BACKUP_DIR=./backups